extends main
block content

    #modaldialog.modal.fade(tabindex='-1', role='dialog', aria-labelledby='simpletableLabel', aria-hidden='true')
        div
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true') ×        
                .modal-body      
                    .row
                        .col-md-12
                            input#fulladress.form-control
                        .col-md-3
                            .list-group#adress_results
                        .col-md-9
                            #osm-map
                            .form-actions
                            .row
                                .col-md-12
                                    #okMapButton.btn.btn-success OK
                                    #adresConfirm
    #pageinfo(page=`${page}`)
    a.btn.btn-labeled.btn-success#addBut(href='javascript:void(0);', data-toggle='modal', data-target='#simpletableModal')
        span.btn-label
            i.glyphicon.glyphicon-plus
        = addButton

    #simpletableModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='simpletableLabel', aria-hidden='true')
        .modal-dialog.modal-mostlarge
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                    h4#simpletableRegistrationLabel.modal-title= l.simpletableRegistrationLabel
                .modal-body
                    form#simpletableForm()
                        fieldset
                            .form-group
                                .row
                                    .col-md-12
                                        label.control-label= l.first_name
                                        input#first_name.form-control(type='text', name='first_name' required='true' maxlength=20 autocomplete="off").formField
                                        label.control-label= l.surname
                                        input#second_name.form-control(type='text', name='second_name' required='true' maxlength=20 autocomplete="off").formField
                                        label.control-label= l.patronymic
                                        input#middle_name.form-control(type='text', name='middle_name' required='true' maxlength=20 autocomplete="off").formField
                                        label.hide4Admin.control-label= l.organization
                                        select.hide4Admin.form-control(name='id_organization')#organizations  
                                        label.control-label= l.role
                                        select.form-control(name='user_role' value="OPERATOR" ).formField#userRole
                                            option(value="OPERATOR") Operator
                                            option.hide4Admin(value="ADMIN") Admin
                                            option(value="PERFOMER") Perfomer

                                        label.control-label= l.personal_phone
                                        input#personal_phone.form-control(type='text', name='personal_phone' maxlength=20 autocomplete="off").formField
                                        label.control-label= l.buziness_phone
                                        input#buziness_phone.form-control(type='text', name='buziness_phone' maxlength=20 autocomplete="off").formField
                                        label.control-label= l.email
                                        input#e_mail.form-control(type='text', name='e_mail' maxlength=20 autocomplete="off").formField
                                        label.control-label= l.position
                                        input#position.form-control(type='text', name='position' maxlength=40 autocomplete="off").position
                                        
                                        label.control-label= l.login
                                        input#loginField.form-control(type='text', name='login' autocomplete="username" required='true' maxlength=20)
                                        label.control-label= l.pass
                                        input#password.formField.form-control(type='password', name='password_hash' autocomplete="new-password")
                                        label.control-label= l.confirm_pass
                                        input#confirm_password.formField.form-control(type='password', name='confirm_password_hash' autocomplete="new-password")
                                        span#message

                        .form-actions
                            .row
                                .col-md-12
                                    button(type="submit")#AddButton.btn.btn-success= l.save


                    form#mostEditForm()
                        fieldset
                            .form-group
                                .row
                                    .col-md-12
                                        label.control-label= l.first_name
                                        input#changeFirst_name.form-control(type='text' name='first_name' required='true' maxlength=20 autocomplete="off").formField
                                        label.control-label= l.surname
                                        input#changeSecond_name.form-control(type='text' name='second_name' required='true' maxlength=20 autocomplete="off").formField
                                        label.control-label= l.patronymic
                                        input#changeMiddle_name.form-control(type='text' name='middle_name' required='true' maxlength=20 autocomplete="off").formField   
                                        label.control-label= l.personal_phone
                                        input#changePersonal_phone.form-control(type='text' name='personal_phone' maxlength=20 autocomplete="off").formField
                                        label.control-label= l.buziness_phone
                                        input#changeBuziness_phone.form-control(type='text' name='buziness_phone' maxlength=20 autocomplete="off").formField
                                        label.control-label= l.email
                                        input#changeE_mail.form-control(type='text' name='e_mail' maxlength=20 autocomplete="off").formField
                                        label.control-label= l.position
                                        input#changePosition.form-control(type='text' name='position' maxlength=40 autocomplete="off").position
                        .form-actions
                            .row
                                .col-md-2
                                    button#showlLogPassButton.btn.btn-outline-secondary= l.changeLogPass
                                .col-md-10
                                    button(type="submit")#mostEditButton.btn.btn-success= l.save

                    form#showlLogPass()
                        fieldset
                            .form-group
                                .row
                                    .col-md-12
                                        label.control-label= l.login
                                        input#changelogin.form-control(type='text' name='login' required='true' maxlength=20 autocomplete="username")
                                        label.control-label= l.pass
                                        input#changePassword.form-control(type='password' name='password_hash' required='true' maxlength=20 minlength=6 autocomplete="new-password")
                                        label.control-label= l.confirm_pass
                                        input#changeConfirm_password1.form-control(type='password' name='confirm_password_hash' required='true' maxlength=20 minlength=6 autocomplete="new-password")
                                        span#messageOnChange
                        .form-actions
                            .row
                                .col-md-12
                                    button(type="submit")#savelLogPassButton.btn.btn-success= l.save

    #changeStatusModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='lalalabel', aria-hidden='true')
        .modal-dialog.modal-lg
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                    h4#changeStatusLabel.modal-title= l.setTeamLable
                .modal-body
                    form#Form(data-disable="false")
                        fieldset
                            .form-group                                
                                .row
                                    .col-md-12
                                        label= l.team
                                        select.form-control(name='team')#teamselect
                        .form-actions
                            .row
                                .col-md-12
                                    div()#setTeamButton.btn.btn-success= l.save

    table#dt_basic.table.table-striped.table-bordered.table-hover(width='100%')
    
    script(src='js/plugin/datatables/jquery.dataTables.min.js')
    script(src='js/plugin/datatables/dataTables.colVis.min.js')
    script(src='js/plugin/datatables/dataTables.tableTools.min.js')
    script(src='js/plugin/datatables/dataTables.bootstrap.min.js')
    script(src='js/plugin/datatable-responsive/datatables.responsive.min.js')
    script(src='js/plugin/bootstrapvalidator/bootstrapValidator.min.js')
    script(src='js/edit_simple_table.js')
    script(src='js/reg_admin_front.js')